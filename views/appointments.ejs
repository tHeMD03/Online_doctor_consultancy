<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="img/favicon.png" type="image/png">
    <title>Medcare Medical</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/themify-icons.css">
    <link rel="stylesheet" href="css/flaticon.css">
    <link rel="stylesheet" href="vendors/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="vendors/animate-css/animate.css">
    <!-- main css -->
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
    <script>
        var accept = function(id){
            document.getElementById(id).innerHTML = 'accepted';
        }
    </script>
</head>
<body>

    <!--================Header Menu Area =================-->
    <header class="header_area">
        <%- include('header.ejs') %>
    </header>
    <!--================Header Menu Area =================-->


    <!--================Home Banner Area =================-->
    <!--================End Home Banner Area =================-->


     
    <!--================ Team section start =================-->  
    <section class="team-area area-padding">
        <div class="container">
            <% if(locals.results && results.length != 0){ %>
                <table style="border-collapse: collapse; width: 100%;">
                    <tr>
                        <th>Sr.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Date</th>
                        <th></th>
                        <th></th>
                    </tr>
                    <% for(i=0; i < (results.length); i++){ %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= results[i].fullname %></td>
                            <td><%= results[i].email %></td>
                            <td><%= results[i].mobile %></td>
                            <td><%= results[i].date %></td>
                            <td> <a href='#' onclick="accept(this.id)" id="accept<%= i %>" class="main_btn accept">Accept</a> </td>
                            <td> <a href='/reject?id=<%= results[i]._id %>' class="main_btn">Reject</a> </td>
                        </tr>
                    <% }; %> 
                </table>
            <% }else{ %>
                <div style="width: 100%; color: red; border: 2px solid red; border-radius: 5px;">You don't have any pending appointment.</div>
            <% } %>
        </div>
    </section>
    <!--================ Team section end =================-->  



        <!-- ================ Hotline Area Starts ================= -->  

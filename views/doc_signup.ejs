<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="img/favicon.png" type="image/png">
    <title>Medcare Medical</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/themify-icons.css">
    <link rel="stylesheet" href="css/flaticon.css">
    <link rel="stylesheet" href="vendors/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="vendors/animate-css/animate.css">
    <!-- main css -->
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>
<body>

    <!--================Header Menu Area =================-->
    <header class="header_area">
        <%- include('header.ejs') %>
    </header>
    <!--================Header Menu Area =================-->

    <!--================Home Banner Area =================-->
    <section class="banner_area">
      <div class="banner_inner d-flex align-items-center">
        <div class="container">
          <div class="banner_content d-md-flex">
          <div>
              <h1>Doctor Registration</h1><br>
          </div>
      </div>
  </div>
</div>
</section>
<!--================End Home Banner Area =================-->

<!--================ appointment Area Starts =================-->
<section class="appointment-area area-padding-top">
    <div class="container">
                <div class="col-lg-5">
                    <div class="appointment-form">
                        <form action="/docsign" method="POST">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" name="fname" placeholder="Enter First Name" required> 
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="test" name="lname" placeholder="Enter Last Name" required> 
                            </div>
                            <div class="form-group">
                                <label>Qualifications</label>
                                <input type="text" name="qualification" placeholder="Enter Qualifications" required> 
                            </div>
                            <div class="form-group">
                                <label>Speciality</label>
                                <input type="text" name="speciality" placeholder="Enter Your Speciality" required> 
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="email" placeholder="Enter Email" required> 
                            </div>
                            <div class="form-group">
                                <label>Mobile No.</label>
                                <input type="phone" name="mobile" placeholder="Enter Mobile Number" required> 
                            </div>
                            <div class="form-group">
                                <label>Create Password</label>
                                <input type="password" name="pswd" placeholder="Enter Password" required>
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" name="confpswd" placeholder="Enter Confirm Password" required>
                            </div>
                            <!-- <div class="form-group">
                                <label>Upload Adhaar Card</label>
                                <input type="file" name="adhaar" required>
                            </div> -->
                            <!-- <div class="form-group">
                                <label>Upload Doctor Practice License</label>
                                <input type="file" name="license">
                            </div> -->
                            <div class="form-group">
                                <label>Pincode</label>
                                <input type="text" name="pincode" placeholder="Enter Pincode" required> 
                            </div>
                            
                            <div class="form-group">
                                <label>Clinic/Hospital Address</label>
                                <textarea name="address" cols="20" rows="7"  placeholder="Enter Your Address" required></textarea>
                            </div>
                            <input type="submit" class="main_btn" name="submit" value="Register">
                        </form>
                    </div>
                </div>
            </div>

        </div>


    </div>
</section>
<!--================ appointment Area End =================-->


<!-- start footer Area -->
<footer class="footer-area area-padding-top">
    <%- include('footer.ejs') %>
</footer>
<!-- End footer Area -->






